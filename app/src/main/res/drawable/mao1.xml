<?xml version="1.0" encoding="utf-8"?>
<!-- android:shape指定形状类型，默认为rectangle -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- solid指定形状的填充色，只有android:color一个属性 -->
    <solid android:color="#f6dd83"></solid>
    <!-- padding设置内容区域离边界的间距 -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"></padding>
    <!--在这里我只演示默认的线性渐变，定义了开始颜色，中间颜色，结束颜色-->
    <gradient
        android:type="linear"
        android:startColor="@color/colorAccent"
        android:centerColor="#ffffff"
        android:endColor="@color/colorPrimaryDark">
    </gradient>
    <!-- corners设置圆角，只适用于rectangle。可以单独定义每个角的半径-->
    <corners
        android:radius="50dp"></corners>
    <!-- stroke设置带虚线描边，可以自定义虚线的间隔和虚线长度-->
    <stroke
        android:color="#000000"
        android:width="5dp"
        android:dashGap="5dp"
        android:dashWidth="50dp"></stroke>
</shape>